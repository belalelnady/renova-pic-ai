# Environment
NODE_ENV="production"

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/photo_app"
# For production, use connection pooling
DATABASE_URL_POOLED="postgresql://username:password@localhost:5432/photo_app?pgbouncer=true&connection_limit=10"

# NextAuth.js
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# File Storage
UPLOAD_DIR="./uploads"
# For production, use cloud storage
AWS_S3_BUCKET="your-s3-bucket-name"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
CLOUDINARY_URL="cloudinary://api_key:api_secret@cloud_name"

# AI Webhooks
VISA_PHOTO_WEBHOOK_URL="https://api.example.com/visa-photo"
ABSHER_WEBHOOK_URL="https://api.example.com/absher"
SAUDI_LOOK_WEBHOOK_URL="https://api.example.com/saudi-look"
BABY_PHOTO_WEBHOOK_URL="https://api.example.com/baby-photo"

# Database Webhook
DATABASE_WEBHOOK_URL="https://api.example.com/database-events"
DATABASE_WEBHOOK_AUTH_TOKEN="your-database-webhook-auth-token"

# AI Webhook Authentication Tokens
VISA_PHOTO_AUTH_TOKEN="your-visa-photo-auth-token"
ABSHER_AUTH_TOKEN="your-absher-auth-token"
SAUDI_LOOK_AUTH_TOKEN="your-saudi-look-auth-token"
BABY_PHOTO_AUTH_TOKEN="your-baby-photo-auth-token"

# Security
CSRF_SECRET="your-csrf-secret-key"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Monitoring
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
ANALYTICS_ID="your-analytics-id"

# Performance
ENABLE_PERFORMANCE_MONITORING="false"
REDIS_URL="redis://localhost:6379"

# Email (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@your-domain.com"